<%= simple_form_for @usuario, wrapper: :vertical_form  do |f| %>
	<%= f.input :email, label: "Correo" %>
 	<%= f.input :password, label: "Contraseña" %>
 	<%= f.input :password_confirmation, label: "Confirmar Contraseña" %>
  	<%= f.input :primerNombre, label: "Primer Nombre" %>
  	<%= f.input :segundoNombre, label: "Segundo Nombre"} %>
 	<%= f.input :primerApellido, label: "Primer Apellido" %>
 	<%= f.association :roles, as: :check_boxes %>
  	<div class="botones">
  		<%= f.button :submit, value: "Crear Usuario", class: "btn btn-info" %>
  		<div class="btn btn-secondary">
  			<i class="fas fa-undo-alt"></i> <%= link_to 'Regresar', usuarios_path %>
  		</div>
  	</div>
<% end %>