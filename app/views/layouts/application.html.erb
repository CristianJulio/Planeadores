<!DOCTYPE html>
<html>
  <head>
    <% if usuario_signed_in? %>
      <title><%= @title %></title>
    <% else %>
      <title>Proyecto Planeadores</title>
    <% end %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/348c72a25c.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> <!-- Jquery -->
  	<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script> <!-- Jquery DataTables -->
  	<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script> <!-- DataTables Boostrap js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script> <!-- Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script> <!-- Boostrap JS -->
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css"> <!-- Boostrap -->
  	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css"> <!-- DataTables Boostrap css -->
  </head>

  <body>
    <nav id="menuLateral">
      <ul id="ul">
        <li><i class="fas fa-tachometer-alt"></i> <%= link_to ' Dashboard', root_path %></li>

        <% if current_usuario.has_role? :admin %>
        <li><i class="fas fa-users"></i> <%= link_to 'Usuarios', usuarios_path %></li>
        <% end %>

        <li><i class="fas fa-user-tie"></i><%= link_to 'Agentes', agentes_path %></li>
        <li><i class="fas fa-dollar-sign"></i> <%= link_to 'Transacciones', transacciones_path %></li>
        <li><i class="fas fa-book"></i> <%= link_to 'Planeaciones', planeaciones_path %></li>
      </ul>
    </nav>
    
    <header class="d-flex justify-content-between align-items-center shadow-sm p-3 mb-5" id="header">
      <div class="title d-flex align-items-center">
          <div id="btnNav" class="btnNav">
              <i class="fas fa-bars"></i>
          </div>
          <h1>Proyecto Planeadores</h1>
      </div>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <% if usuario_signed_in? %>
      <div class="dropdown">
          <% if current_usuario.has_role? :admin %>
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin <i class="fas fa-user"></i></button>
          <% else %>
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Usuario <i class="fas fa-user"></i></button>
          <% end %>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "Cerrar session", destroy_usuario_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% end %>
    </header>

    <div id="header2"></div>

    <div class="container">
      <%= yield %>
    </div>

    <!-- <div class="fixed-bottom">
      <footer>
        <div class="container d-flex justify-content-between align-items-center">
          <p>Proyecto Planeadores</p>
          <p>Version 1.11.2</p>
        </div>
      </footer>
    </div> -->

    <%= javascript_pack_tag 'app'%>
  </body>
</html>
